<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.priyanka.myapps.NewsActivity"
    android:background="#ddfffe">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Apple News"
        android:id="@+id/btnAppleNews"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:onClick="fetchNews" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Google News"
        android:id="@+id/btnGoogleNews"
        android:layout_below="@+id/btnAppleNews"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="fetchNews" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Felight News"
        android:id="@+id/btnFelightNews"
        android:layout_below="@+id/btnGoogleNews"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:onClick="fetchNews" />
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.priyanka.myapps.InstagramCloneActivity"
    android:background="#e7fff9">


    <ImageView
        android:src="@drawable/aishwarya"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivAish"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:onClick="doImageEffects"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BW"
        android:id="@+id/btnGrayScale"
        android:layout_below="@+id/ivAish"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:onClick="doImageEffects"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sophia"
        android:id="@+id/btnSophia"
        android:layout_alignTop="@+id/btnGrayScale"
        android:layout_toRightOf="@+id/btnGrayScale"
        android:layout_toEndOf="@+id/btnGrayScale" />
</RelativeLayout>
